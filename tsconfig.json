{
  "compilerOptions": {
    /* Output options */
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,

    /* Module resolution */
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* React */
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Paths & Aliases */
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
